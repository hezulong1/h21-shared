{
  "extends": "./config/tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2018",
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable",
      "WebWorker.ImportScripts"
    ],
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
    }
  },
  "include": [
    "src"
  ]
}
